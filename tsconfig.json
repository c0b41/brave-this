{
    "compilerOptions": {

        "target": "esnext",
        "module": "esnext",
        "lib": ["es2022"],
        "moduleResolution": "node",
        "isolatedModules": true,
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "noEmit": true,
        "allowJs": true,
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "dist"]
}