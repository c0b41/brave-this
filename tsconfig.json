{
    "compilerOptions": {

        "target": "esnext",
        "module": "esnext",
        "lib": ["es2022"],
        "moduleResolution": "node",
        "isolatedModules": true,
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "noEmit": true,
        "allowJs": true,
        "baseUrl": ".",
        "paths": {
            "#nodes/*": ["./src/core/nodes/*"],
            "#engine/*": ["./src/core/engine/*"],
            "#utils": ["./src/utils/index.ts"],
            "#utils/*": ["./src/utils/*"],
        }
    },
    "include": ["./src/**/**/*.ts"],
    "exclude": ["node_modules", "dist"]
}